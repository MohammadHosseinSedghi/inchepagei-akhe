<body>
  <div class="noise"></div>
  <div class="floaters" id="floaters"></div>
  <div class="confetti" id="confetti"></div>

  <div class="wrap">
    <main class="card" id="card">
      <div class="glow"></div>

      <div class="top">
        <div class="badge">
          <span class="dot"></span>
          <span id="badgeText">Hover to reveal sweet little secrets</span>
        </div>
        <div class="badge" title="Made with love">
          <span>‚ô°</span>
          <span id="dateText">Valentine‚Äôs Day</span>
        </div>
      </div>

      <h1 id="title">Will you be my Valentine?</h1>
      <p class="sub" id="subtitle">
        Move your mouse around, hover the tiny hearts, and watch the magic happen.
        I hid a few reasons I‚Äôm crazy about you.
      </p>

      <div class="hint">
        <span>Tip</span>
        <kbd>Hover</kbd>
        <span>the tiles to unlock messages</span>
      </div>

      <section class="garden" id="garden"></section>

      <div class="lovebar" aria-label="love meter">
        <div class="fill" id="fill"></div>
      </div>

      <div class="actions">
        <button class="btn yes" id="yesBtn">Yes, obviously</button>
        <button class="btn maybe" id="noBtn">Hmm‚Ä¶</button>
      </div>

      <div class="footer" id="footer">
        P.S. Try to catch the ‚ÄúHmm‚Ä¶‚Äù button. It‚Äôs shy.
      </div>
    </main>
  </div>

  <div class="toast" id="toast">
    <span>üíó</span>
    <span id="toastText">You found a secret.</span>
  </div>

  <div class="modal" id="modal" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="box">
      <button class="x" id="closeModal" aria-label="Close">‚úï</button>
      <h2 id="modalTitle">YAY! It‚Äôs a date üíû</h2>
      <p id="modalBody">
        I‚Äôm officially the luckiest person alive.
        I‚Äôll pick you up, bring your favorite treat, and make this day all about us.
      </p>
      <div class="row">
        <button class="btn yes" id="confettiAgain">More confetti</button>
        <button class="btn maybe" id="copyMsg">Copy cute message</button>
      </div>
      <div class="tiny" id="tinyLine">
        You can customize all the text in the top of the file in the ‚ÄúCustomize‚Äù section.
      </div>
    </div>
  </div>

  <script>
    // Customize
    const herName = "my love";
    const yourName = "Me";
    const dayLabel = "Valentine‚Äôs Day";

    const hoverNotes = [
      "Your smile fixes my whole day",
      "You‚Äôre my favorite place",
      "I love your laugh so much",
      "You make everything softer",
      "You‚Äôre magic in human form",
      "I‚Äôd choose you every time",
      "You‚Äôre my calm and my fun",
      "You + me = my best idea",
      "I adore you. Like, a lot",
      "You‚Äôre the prettiest plot twist",
      "I feel home with you",
      "You make my heart do flips"
    ];

    const finalMessage = `Dear ${herName},\nWill you be my Valentine?\nLove, ${yourName}`;

    const titleEl = document.getElementById("title");
    const dateText = document.getElementById("dateText");
    const badgeText = document.getElementById("badgeText");
    const garden = document.getElementById("garden");
    const fill = document.getElementById("fill");
    const toast = document.getElementById("toast");
    const toastText = document.getElementById("toastText");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const modal = document.getElementById("modal");
    const closeModal = document.getElementById("closeModal");
    const confettiAgain = document.getElementById("confettiAgain");
    const copyMsg = document.getElementById("copyMsg");
    const confettiLayer = document.getElementById("confetti");
    const floaters = document.getElementById("floaters");

    dateText.textContent = dayLabel;
    titleEl.textContent = "Will you be my Valentine?";

    // Build hover garden
    const icons = ["üíó","‚ú®","üå∏","üíñ","üåô","ü´∂"];
    let found = new Set();
    let love = 12;

    function showToast(msg){
      toastText.textContent = msg;
      toast.classList.add("show");
      clearTimeout(showToast.t);
      showToast.t = setTimeout(() => toast.classList.remove("show"), 1400);
    }

    function updateLove(){
      const pct = Math.min(100, love);
      fill.style.width = pct + "%";
      if (pct >= 85) badgeText.textContent = "Ok wow. That‚Äôs a lot of love.";
      else if (pct >= 55) badgeText.textContent = "Keep hovering‚Ä¶ you‚Äôre unlocking the cutest stuff.";
      else badgeText.textContent = "Hover to reveal sweet little secrets";
    }

    function makeTile(i){
      const tile = document.createElement("button");
      tile.className = "seed";
      tile.type = "button";

      const icon = document.createElement("span");
      icon.textContent = icons[i % icons.length];

      const note = document.createElement("div");
      note.className = "note";
      note.textContent = hoverNotes[i % hoverNotes.length];

      tile.appendChild(icon);
      tile.appendChild(note);

      tile.addEventListener("mouseenter", () => {
        if (!found.has(i)){
          found.add(i);
          love += 6;
          updateLove();
          showToast(note.textContent);
          sparkle(tile);
        }
      });

      return tile;
    }

    for (let i=0; i<12; i++) garden.appendChild(makeTile(i));
    updateLove();

    // Floating background hearts
    function spawnFloater(){
      const el = document.createElement("div");
      el.className = "floater";
      el.textContent = Math.random() > 0.55 ? "‚ô°" : "‚ú¶";
      const left = Math.random() * 100;
      const size = 14 + Math.random() * 18;
      const duration = 10 + Math.random() * 14;
      el.style.left = left + "vw";
      el.style.fontSize = size + "px";
      el.style.animationDuration = duration + "s";
      el.style.opacity = (0.25 + Math.random() * 0.45).toFixed(2);
      el.style.filter = "blur(" + (Math.random()*0.6).toFixed(2) + "px)";
      floaters.appendChild(el);
      setTimeout(() => el.remove(), duration * 1000);
    }
    for (let i=0; i<18; i++) setTimeout(spawnFloater, i*350);
    setInterval(spawnFloater, 700);

    // Button that playfully dodges
    function moveNoButton(){
      const card = document.getElementById("card").getBoundingClientRect();
      const btn = noBtn.getBoundingClientRect();

      const pad = 14;
      const minX = card.left + pad;
      const maxX = card.right - btn.width - pad;
      const minY = card.top + 140;
      const maxY = card.bottom - btn.height - 24;

      const x = Math.max(minX, Math.min(maxX, (Math.random() * (maxX - minX)) + minX));
      const y = Math.max(minY, Math.min(maxY, (Math.random() * (maxY - minY)) + minY));

      noBtn.style.position = "fixed";
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
      noBtn.style.zIndex = 9;
    }

    let dodges = 0;
    noBtn.addEventListener("mouseenter", () => {
      dodges++;
      love += 2;
      updateLove();
      if (dodges < 12) moveNoButton();
      else {
        noBtn.textContent = "Okay okay‚Ä¶ yes";
        noBtn.classList.add("yes");
        noBtn.classList.remove("maybe");
      }
    });

    noBtn.addEventListener("click", () => {
      // After enough dodges, it turns into a yes anyway
      openModal();
    });

    // YES flow
    yesBtn.addEventListener("click", () => {
      love = 100;
      updateLove();
      openModal();
    });

    function openModal(){
      modal.classList.add("show");
      modal.setAttribute("aria-hidden","false");
      confettiBurst(160);
      sparkle(document.getElementById("card"));
    }

    closeModal.addEventListener("click", () => {
      modal.classList.remove("show");
      modal.setAttribute("aria-hidden","true");
    });

    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeModal.click();
    });

    confettiAgain.addEventListener("click", () => confettiBurst(120));

    copyMsg.addEventListener("click", async () => {
      try{
        await navigator.clipboard.writeText(finalMessage);
        showToast("Copied. Send it or keep it as a cute keepsake.");
      }catch{
        showToast("Copy blocked. You can still screenshot it.");
      }
    });

    // Sparkle effect
    function sparkle(target){
      const r = target.getBoundingClientRect();
      for (let i=0; i<10; i++){
        const s = document.createElement("div");
        s.textContent = Math.random() > 0.5 ? "‚ú®" : "üíó";
        s.style.position = "fixed";
        s.style.left = (r.left + r.width*0.2 + Math.random()*r.width*0.6) + "px";
        s.style.top = (r.top + r.height*0.2 + Math.random()*r.height*0.6) + "px";
        s.style.fontSize = (12 + Math.random()*16) + "px";
        s.style.opacity = "0.95";
        s.style.pointerEvents = "none";
        s.style.zIndex = 25;
        s.style.transition = "transform .7s ease, opacity .7s ease";
        document.body.appendChild(s);

        requestAnimationFrame(() => {
          s.style.transform = "translateY(-18px) scale(0.9)";
          s.style.opacity = "0";
        });

        setTimeout(() => s.remove(), 720);
      }
    }

    // Confetti
    function confettiBurst(n=120){
      const colors = [
        "rgba(255,61,127,.95)",
        "rgba(124,58,237,.95)",
        "rgba(255,200,221,.95)",
        "rgba(255,255,255,.92)",
        "rgba(255,122,166,.95)"
      ];

      for (let i=0; i<n; i++){
        const p = document.createElement("div");
        p.className = "piece";
        p.style.left = (Math.random() * 100) + "vw";
        p.style.top = (-10 - Math.random()*20) + "vh";
        p.style.background = colors[Math.floor(Math.random()*colors.length)];
        p.style.transform = "translateY(0) rotate(" + (Math.random()*360) + "deg)";
        p.style.animationDuration = (2.8 + Math.random()*2.2) + "s";
        p.style.animationDelay = (Math.random()*0.25) + "s";
        p.style.width = (8 + Math.random()*10) + "px";
        p.style.height = (10 + Math.random()*16) + "px";
        confettiLayer.appendChild(p);
        setTimeout(() => p.remove(), 5200);
      }
    }
  </script>
</body>
</html>
